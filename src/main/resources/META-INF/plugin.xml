<idea-plugin>
    <id>org.example.intelijpluginplayground</id>
    <name>Plugin playground</name>
    <vendor email="vahabghadiri@gmail.com">V</vendor>

    <description>This is a test plugin for adb</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>

        <action id="Playground" class="Playground" text="Playground plugin first"
                description="Playground plugin first desc">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta I"/>
        </action>
    </actions>
</idea-plugin>